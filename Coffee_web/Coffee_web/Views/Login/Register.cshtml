@model Coffee_web.Models.Staff

@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<link href="~/Content/Style/Register.css" rel="stylesheet" />
<link href="~/Content/Style/StyleSheet2.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<div class="container">
    @using (Html.BeginForm("Register", "Login", FormMethod.Post))
    {

        <h1 style="text-align:center; margin-top:55px;">Register</h1>
        <table>
            <tr>
                <td>Id: </td>
                <td>@Html.TextBoxFor(m => m.id_staff)</td>
                <td>@Html.ValidationMessageFor(m => m.id_staff, "", new { @class = "text" })</td>
            </tr>
            <tr>
                <td colspan="3">
                    @if (ViewBag.error != null)
                    {
                        @ViewBag.error
                    }
                </td>

            </tr>
            <tr>
                <td>Full name: </td>
                <td>@Html.TextBoxFor(m => m.name_staff)</td>
                <td>@Html.ValidationMessageFor(m => m.name_staff, "", new { @class = "text" })</td>
            </tr>
            <tr>
                <td>NumberPhone: </td>
                <td>@Html.TextBoxFor(m => m.number_phone)</td>
                <td>@Html.ValidationMessageFor(m => m.number_phone, "", new { @class = "text" })</td>
            </tr>
            <tr>
                <td>Address: </td>
                <td>@Html.TextBoxFor(m => m.address_live)</td>
                <td>@Html.ValidationMessageFor(m => m.address_live, "", new { @class = "text" })</td>
            </tr>
            <tr>
                <td>Gender: </td>
                <td>@Html.TextBoxFor(m => m.gender)</td>
                <td>@Html.ValidationMessageFor(m => m.gender, "", new { @class = "text" })</td>
            </tr>
            <tr>
                <td>PassWork: </td>
                <td>@Html.PasswordFor(m => m.password_staff)</td>
                <td>@Html.ValidationMessageFor(m => m.password_staff, "", new { @class = "text" })</td>
            </tr>
            <tr>
                <td>Confirm PassWork: </td>
                <td>@Html.PasswordFor(m => m.confirmPass)</td>
                <td>@Html.ValidationMessageFor(m => m.confirmPass, "", new { @class = "text" })</td>
            </tr>
            <tr>
                <td colspan="3">
                    <input type="submit" name="btnRegister" value="Register" id="btn" />
                </td>
            </tr>
        </table>

    }
</div> 