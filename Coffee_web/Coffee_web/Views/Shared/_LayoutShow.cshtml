<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /*body {
            background-image: url('../../content/img/—pngtree—cafe poster background_416615.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }*/
        body, html {
            margin: 0;
            padding: 0;
        }

        .div-top {
            margin: 0;
            padding: 0;
        }
        .main-content {
            display: flex;
            flex-wrap: wrap;
        }

        .div-top {
            width: 100%;
            height: 50px;
            margin-bottom: 10px;
        }

        .div-content {
            width: 100%;
            height: 500px;
            float: left;
            margin-top:50px;
        }

        .div-footer {
            width: 100%;
            height: 100px;
        }

        .nav-link:hover {
            text-decoration: none;
            color: orangered;
        }

        .nav-link {
            font-size: 20px;
            font-family: 'Roboto Slab', serif;
            color: white;
        }
    </style>
</head>
<body>
    <div class="div-top">
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#" style="font-size: 35px; font-family: 'Roboto Slab', serif;">Coffee Chill With Friends</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="collapsibleNavbar">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "ProductClient")">Trang Chủ</a>

                            </li>
                        </ul>
                        <ul class="navbar-nav navbar-right">
                            <li>
                                <img src="@Url.Content("~/Content/Img/icons8-buy-50.png")" style="height:46px;width:46px" />
                                @Html.Action("BagCart", "ShoppingCart")
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
    </div>
        <div class="main-content">
            <div class="div-left">
            </div>
            <div class="div-content">
                @RenderBody()
            </div>
        </div>
        <div class="div-footer"></div>
</body>
</html>
