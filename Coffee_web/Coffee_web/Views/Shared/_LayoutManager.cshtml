<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        .dropdown-menu:hover .dropdown-content {
            display: block;
            position: absolute;
        }
    </style>
</head>
<body>
    <div class="nav">
        <p >
            <i class="bi bi-cup-hot-fill" style="color:white"></i> 
            <a id="Name" style="color:white">Coffee Chill With Friends </a>
        </p>
        <div id="Manager">
            <div id="Name_manager">
                @if (Session["name_staff"] != null)
            {
                    <h5>@Session["name_staff"]</h5>
            } 
                <a href="Index" style="color:white;">
                    <i class="bi bi-person-circle" style="cursor:pointer"></i>
                </a>        
            </div>          
            <div class="dropdown-menu">
                <i class="bi bi-list" ></i>
                <div class="dropdown-content" style="position:absolute;">
                    <a href="@Url.Action("StoragesMain","Storages")">Hàng tồn</a>
                    <a href="@Url.Action("LayoutMain","Coffee")">Đăng xuất</a>
                </div>
            </div>   
        </div>

    </div>
   
    <div id="box">
        @RenderBody()
    </div>
    <div id="footer" style="color:white;">
        <p>Email:</p>
        <p>HotLine:</p>
        <p>Address:</p>
    </div>
</body>
</html>
